<Window x:Class="DigitalOceanConnectDesktop.DropletWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DigitalOceanConnectDesktop"
        mc:Ignorable="d"
        Title="Droplets" Height="450" Width="815">
    <Grid Margin="0,0,10,7">
        <ListView x:Name="DropletList" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="0,0,109,10">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>
        <Button x:Name="NewButton" Content="New Droplet" HorizontalAlignment="Left" Margin="720,10,0,0" VerticalAlignment="Top" Click="NewButton_Click"/>
        <Button x:Name="DeleteButton" Content="Delete Droplet" HorizontalAlignment="Left" Margin="711,35,0,0" VerticalAlignment="Top" Click="DeleteButton_Click"/>
        <Button x:Name="RefreshButton" Content="Reflesh" HorizontalAlignment="Left" Margin="748,60,0,0" VerticalAlignment="Top" Click="RefreshButton_Click"/>

    </Grid>
</Window>
